<title><%= title %></title>
<link rel="stylesheet" type="text/css" href="/resources/css/bootstrap.min.css" />
<script src="/resources/jquery.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<style>
    html {
        position: relative;
        min-height: 100%;
    }
    body {
        margin-bottom: 60px;
    }
    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px;
        background-color: #f5f5f5;
    }
    .container {
        width: auto;
        max-width: 680px;
        padding: 0 15px;
    }
    .container .text-muted {
        margin: 20px 0;
    }
    #template {
        display: none;
    }
</style>
<script>
    var socket = io();
    socket.on('update', function(msg) {
        var template = $('#template').clone();
        template.find('#text').html(msg.text);
        template.find('#timestamp').html(date = new Date(parseInt(msg.timestamp)).toString());
        if(!$('#posts blockquote').first().hasClass('blockquote-reverse') && $("#none").length == 0)
            template.addClass('blockquote-reverse');
        if($("#none").length != 0)
            $("#none").remove();
        template.prependTo('#posts');
        template.slideDown();
        template.removeAttr('id');
    });
</script>
